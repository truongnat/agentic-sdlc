<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Animated gradient mesh background -->
  <div class="absolute inset-0 gradient-mesh"></div>
  
  <!-- Animated particles -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute w-96 h-96 bg-blue-500/20 rounded-full blur-3xl animate-float" style="top: 10%; left: 10%;"></div>
    <div class="absolute w-96 h-96 bg-purple-500/20 rounded-full blur-3xl animate-float" style="top: 60%; right: 10%; animation-delay: 2s;"></div>
    <div class="absolute w-96 h-96 bg-pink-500/20 rounded-full blur-3xl animate-float" style="bottom: 10%; left: 50%; animation-delay: 4s;"></div>
  </div>
  
  <div class="section-container relative z-10">
    <div class="text-center max-w-5xl mx-auto">
      <!-- Main headline with gradient -->
      <h1 class="text-6xl sm:text-7xl lg:text-8xl font-black mb-8 animate-slide-up">
        Transform Your IDE Into a
        <span class="block gradient-text glow-text mt-2">
          Full SDLC Team
        </span>
      </h1>
      
      <!-- Glassmorphism subtitle card -->
      <div class="glass-card max-w-3xl mx-auto mb-10 animate-slide-up" style="animation-delay: 0.2s;">
        <p class="text-xl sm:text-2xl text-blue-100">
          <span class="font-bold gradient-text">12 specialized AI roles</span>, automated workflows, and knowledge management.
          <span class="block mt-2">Build faster, smarter, better.</span>
        </p>
      </div>
      
      <!-- CTA buttons with glow effects -->
      <div class="flex flex-col sm:flex-row gap-6 justify-center mb-16 animate-slide-up" style="animation-delay: 0.4s;">
        <a href="#quick-start" class="btn-primary group">
          <span class="relative z-10 flex items-center justify-center gap-2">
            Get Started
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
        </a>
        <a href="https://github.com/truongnat/agentic-sdlc" target="_blank" class="btn-secondary group">
          <span class="flex items-center justify-center gap-2">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            View on GitHub
          </span>
        </a>
      </div>
      
      <!-- Enhanced code block with glassmorphism -->
      <div class="code-block max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.6s;">
        <div class="flex items-center justify-between mb-4">
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <button 
            class="text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-2"
            onclick="navigator.clipboard.writeText('npm install -g agentic-sdlc'); this.innerHTML = 'âœ“ Copied!'; setTimeout(() => this.innerHTML = 'ðŸ“‹ Copy', 2000)"
          >
            ðŸ“‹ Copy
          </button>
        </div>
        <pre class="text-left"><code><span class="text-gray-500"># Install globally</span>
<span class="text-blue-400">npm</span> <span class="text-purple-400">install</span> <span class="text-pink-400">-g</span> agentic-sdlc

<span class="text-gray-500"># Create your project</span>
<span class="text-blue-400">agentic-sdlc</span> <span class="text-purple-400">create</span> my-app

<span class="text-gray-500"># Start building with AI</span>
<span class="text-green-400">/pm</span> Build a todo app with auth</code></pre>
      </div>
    </div>
  </div>
  
  <!-- Animated scroll indicator -->
  <div class="absolute bottom-12 left-1/2 transform -translate-x-1/2 scroll-indicator animate-fade-in" style="animation-delay: 1s;">
    <div class="flex flex-col items-center gap-2 text-blue-300">
      <span class="text-sm font-medium">Scroll to explore</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>

<style>
  /* Additional component-specific styles */
  @keyframes typing {
    from { width: 0; }
    to { width: 100%; }
  }
</style>
